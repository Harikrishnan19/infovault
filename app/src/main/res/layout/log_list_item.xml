<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/margin_3"
    android:theme="@style/Theme.Infovault">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/email_id"
                tools:text="harikrishnan97arun@gmail.com"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/sub_heading_2"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/uuid"
                android:layout_marginTop="@dimen/margin_3"
                tools:text="UUID: 988789-988789-878988-87989"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/event_type"
                tools:text="Event: Login"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/timestamp"
                android:layout_marginTop="@dimen/margin_3"
                android:textAlignment="textEnd"
                tools:text="20-11-2023 12:25 PM"
                android:textStyle="italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>